@model PieViewModel



    <form id="profile-form" method="post" role="form" asp-action="Manage" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @*<label asp-for="PieId"></label>*@
                    <input asp-for="PieId" class="form-control" type="hidden" />
                    @*<span asp-validation-for="PieId" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    @*<label asp-for="PieId"></label>*@
                    <input asp-for="CategoryId" class="form-control" type="hidden" />
                    @*<span asp-validation-for="PieId" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShortDescription"></label>
                    <textarea asp-for="ShortDescription" class="form-control"> </textarea>
                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LongDescription"></label>
                    <textarea asp-for="LongDescription" rows="10" class="form-control"></textarea>
                    <span asp-validation-for="LongDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InStock"></label>
                    <input asp-for="InStock" class="form-control" style="width:30px;" />
                    <span asp-validation-for="InStock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsPieOfTheModel"></label>
                    <input asp-for="IsPieOfTheModel" class="form-control" style="width:30px;" />
                    <span asp-validation-for="IsPieOfTheModel" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-primary">Update</button>
            </div>
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PiePictureByte" style="width: 100%;"></label>
                    @if (Model.PiePictureByte != null)
                    {
                        <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.PiePictureByte))">
                    }
                    else
                    {
                        <img id="profilePicture" style="width:350px;height:350px; object-fit:cover; border-radius:50px;" src="">
                    }
                    <input type="file"
                           accept=".png,.jpg,.jpeg,.gif,.tif"
                           asp-for="PiePictureByte"
                           class="form-control"
                           style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                           onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                    @*<span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>*@
                </div>
            </div>

        </div>
    </form>