<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    @*<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>*@
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/v4-shims.css" />
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link href="~/Content/site.css" rel="stylesheet" />
    @*<script>
            $(document).ready(function () {
                $('#searchBox').autocomplete({
                    source: '/api/pie/search'
                });
            });
        </script>*@
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    @await Component.InvokeAsync("CategoryMenu")
                    <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                    <li><a href="#about">About</a></li>
                    <li></li>
                    @await Component.InvokeAsync("ShoppingCartSummery")
                </ul>
                <partial name="_LoginPartial" />
            </div>

        </div>
    </nav>

    <div class="container-fluid" style="padding:0px;">
        <div class="row">
            @*<div class="col-md-3">
                <p class="lead">
                    <img class="img-responsive" alt="Bethany's Pie Shop'" src="~/Images/bethanylogo.png" />
                </p>
            </div>*@
            <div class="col-md-12 text-center no-padding">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer class="text-center"><p>Copyright 2021 <a href="#" style="text-decoration:none">Epic Labs</a>. All Right Reserved</p></footer>
    @RenderSection("Scripts", required: false)
</body>

</html>
