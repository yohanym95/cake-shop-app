@model HomeViewModel

<div class="col-md-12">
    <form method="get" asp-controller="Home" asp-action="Search" role="form">
        <div class="col-md-12" style="margin-bottom:10px;justify-content:center;display:flex;flex-direction:row">
            <div class="col-md-10" style="padding:0px;">
              <input class="form-control" style="font-size:15px;elevation:higher" type="text" id="searchBox" name="search" placeholder="Enter Pie Name" />
            </div>
            @*<input class="col-md-1 searchButton" type="submit" value="Search" />*@
            <span class="input-group-btn" style="margin-left:3px;">
                <button class="btn searchButton" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </form>
</div>

<div class="col-md-12">
    <partial name="_Carousel" />
</div>

<h2 class="col-md-12">Pies of the week</h2>
<h4 class="col-md-12">Our weekly selection - just for you!</h4>

<div class="row col-md-12">
    @foreach(var pie in Model.PiesOfTheWeek)
    {
        <partial name="_PieCard" model="pie" />
    }
</div>
